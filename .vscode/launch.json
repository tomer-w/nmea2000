    "version": "0.2.0",
    "configurations": [
        {
            "name": "build pgns.py",
            "type": "debugpy",
            "request": "launch",
            "program": "canboat2python.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Test TCP Server",
            "type": "debugpy",
            "request": "launch",
            "program": "tests/NMEA2000TestServer.py",
            "console": "integratedTerminal"
        },
        {
            "name": "cli decode",
            "type": "debugpy",
            "request": "launch",
            "module": "nmea2000.cli",
            "console": "integratedTerminal",
            "args": ["decode", "--frame", "09FF7 0FF00 3F9FDCFFFFFFFFFF"]
        },
        {
            "name": "cli decode file",
            "type": "debugpy",
            "request": "launch",
            "module": "nmea2000.cli",
            "console": "integratedTerminal",
            "args": ["--verbose", "decode", "--file", "tests\\recombine-frames.in"]
        },
        {
            "name": "cli tcp_client",
            "type": "debugpy",
            "request": "launch",
            "module": "nmea2000.cli",
            "console": "externalTerminal",
            "args": ["--verbose", "tcp_client", "--server", "192.168.0.47", "--port", "8881", "--type", "EBYTE"]
        },
        {
            "name": "cli usb_client",
            "type": "debugpy",
            "request": "launch",
            "module": "nmea2000.cli",
            "console": "externalTerminal",
            "args": ["--verbose", "usb_client", "--port", "COM7"]
        }
    ]
}